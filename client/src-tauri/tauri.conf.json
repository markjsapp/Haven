{
  "$schema": "https://raw.githubusercontent.com/nickkadutskyi/jb-tauri-v2-schema/main/schema.json",
  "productName": "Haven",
  "version": "0.1.0",
  "identifier": "com.haven.app",
  "build": {
    "frontendDist": "../../packages/web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ../packages/web && npm run dev",
    "beforeBuildCommand": "cd ../packages/web && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Haven",
        "width": 1280,
        "height": 800,
        "minWidth": 940,
        "minHeight": 560,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
